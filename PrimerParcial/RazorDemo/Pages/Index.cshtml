@page
@model IndexModel
@{
    ViewData["Title"] = "Lista de Alumnos";
}

<div class="text-center">
    <h1 class="display-4">Lista de Alumnos</h1>
    <p>Perez Callejas Job Josue</p>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

<a href="/Estadisticas">Ver Estadísticas</a>

<table id="alumnosTable" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Parcial 1</th>
            <th>Parcial 2</th>
            <th>Parcial 3</th>
            <th>Extra</th>
            <th>Promedio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model.AlumnosTable.Rows)
        {
            <tr>
                <td>@row["id"]</td>
                <td>@row["apellido"]</td>
                <td>@row["nombre"]</td>
                <td>@row["parcial1"]</td>
                <td>@row["parcial2"]</td>
                <td>@row["parcial3"]</td>
                <td>@row["extra"]</td>
                <td>@row["promedio"]</td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#alumnosTable').DataTable();
    });
</script>
